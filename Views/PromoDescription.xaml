<Window x:Class="CourseWorkAdmin.Views.PromoDescription"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseWorkAdmin.Views"
        mc:Ignorable="d"
        Title="Описание акции" Height="450" Width="450">
    <Grid Style="{StaticResource GridStyle}">
        <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
        <TextBlock Name ="Description" Grid.Row="0"  Style="{StaticResource TextBlockStyle}" VerticalAlignment="Center"/>
    </Grid>
</Window>
